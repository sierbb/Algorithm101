resource "aws_iam_role" "iam_for_lambda" {
  name = "iam_for_lambda"

  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "sts:AssumeRole",
      "Principal": {
        "Service": "lambda.amazonaws.com"
      },
      "Effect": "Allow",
      "Sid": ""
    }
  ]
}
EOF
}

resource "aws_lambda_function" "test" {
  filename      = "name"
  function_name = "lambda_function_name"
  role          = aws_iam_role.iam_for_lambda.arn
  handler       = "index.test


 source_code_hash = filebase64sha256("lambda_function_payload.zip")

   runtime = "nodejs12.x"

   environment {
     variables = {
       foo = "bar"
     }
   }
 }



//folder structure

//lambda template
main.tf -> lambda function resource, iam policy
variables.tf -> blocks of variables
output.tf -> export

//lamda_env1
main.tf -> import lanmda module
input.auto.tf -> customized variable value
variables.tf -> some more customized variables

